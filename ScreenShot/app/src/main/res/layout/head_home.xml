<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/v_match_parent_no">

    <include layout="@layout/include_banner" />

    <LinearLayout
        style="@style/match_parent"
        android:background="@color/color383e4b"
        android:padding="@dimen/d_10dp">

        <TextView
            android:id="@+id/grade_tv"
            android:text="LV0"
            android:textSize="@dimen/txt_12sp"
            android:textColor="@color/color999"
            android:layout_marginRight="@dimen/d_10dp"
            android:background="@drawable/grade_button"
            style="@style/text" />

        <com.xson.common.widget.FormatTextView
            android:id="@+id/need_num_tv"
            style="@style/text_weight"
            android:textColor="@color/color9c9da0"
            android:layout_gravity="center_vertical"
            app:defaultValue="1"
            app:formatText="@string/order_num" />


        <TextView
            android:id="@+id/state_tv"
            style="@style/text"
            android:background="@drawable/home_button"
            android:text="升级"
            android:textColor="@color/white" />

    </LinearLayout>


    <LinearLayout
        style="@style/match_parent"
        android:layout_height="@dimen/d_100dp"
        android:background="@color/color242a3a">

        <LinearLayout
            style="@style/text_weight"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/text"
                android:text="本金余额"
                android:textColor="@color/colorB6B6B6"
                android:textSize="@dimen/txt_16sp" />

            <TextView
                android:id="@+id/principal_tv"
                style="@style/text"
                android:text="0.00"
                android:textColor="@color/colorF1C107"
                android:textSize="@dimen/txt_20sp" />


        </LinearLayout>

        <TextView style="@style/line_v1dp_divider" />


        <LinearLayout
            style="@style/text_weight"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/text"
                android:text="佣金余额"
                android:textColor="@color/colorB6B6B6"
                android:textSize="@dimen/txt_16sp" />

            <TextView
                android:id="@+id/balance_tv"
                style="@style/text"
                android:text="0.00"
                android:textColor="@color/colorB6B6B6"
                android:textSize="@dimen/txt_20sp" />


        </LinearLayout>

        <TextView style="@style/line_v1dp_divider" />

        <LinearLayout
            style="@style/text_weight"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/text"
                android:text="我的积分"
                android:textColor="@color/colorB6B6B6"
                android:textSize="@dimen/txt_16sp" />

            <TextView
                android:id="@+id/integral_tv"
                style="@style/text"
                android:text="0.00"
                android:textColor="@color/colorB6B6B6"
                android:textSize="@dimen/txt_20sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/ll_bottom_h_no"
        android:layout_marginBottom="@dimen/d_10dp"
        android:padding="@dimen/d_10dp">

        <ImageView
            style="@style/text"
            android:src="@drawable/mine_6" />

        <TextView
            style="@style/text12color666"
            android:layout_marginLeft="@dimen/d_5dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="真实交易，商家发货，超级划算，无佣金" />

    </LinearLayout>

</LinearLayout>
