<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent_has"
    android:gravity="center_vertical"
    android:padding="@dimen/d_20dp">

    <ImageView
        android:id="@+id/pic_iv"
        android:layout_width="@dimen/d_60dp"
        android:layout_height="@dimen/d_60dp"
        android:src="@drawable/default_pic" />

    <TextView
        android:id="@+id/title_tv"
        style="@style/text"
        android:layout_marginLeft="@dimen/d_10dp"
        android:layout_marginTop="@dimen/d_10dp"
        android:layout_toRightOf="@id/pic_iv"
        android:ellipsize="end"
        android:lines="1" />

    <TextView
        android:id="@+id/title_sub_tv"
        style="@style/text12color666"
        android:layout_below="@id/title_tv"
        android:layout_marginLeft="@dimen/d_10dp"
        android:layout_marginTop="@dimen/d_2dp"
        android:layout_toRightOf="@id/pic_iv"
        android:ellipsize="end"
        android:lines="1" />


</RelativeLayout>
